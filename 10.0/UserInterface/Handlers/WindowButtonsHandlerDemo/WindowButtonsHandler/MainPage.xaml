<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WindowButtonsHandler.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">

            <Image Source="dotnet_bot.png" HeightRequest="185" Aspect="AspectFit" />

            <Label x:Name="CounterLabel"
                   Text="Window Buttons Management Demo"
                   FontSize="18"
                   FontAttributes="Bold" />

            <Label Text="Control the minimize and maximize buttons on Mac Catalyst"
                   FontSize="14"
                   HorizontalOptions="Center" />

            <!-- Button to toggle minimize button visibility -->
            <Button x:Name="ToggleMinimizeBtn"
                    Text="Toggle Minimize Button"
                    Clicked="OnToggleMinimizeClicked" />

            <!-- Button to toggle maximize button visibility -->
            <Button x:Name="ToggleMaximizeBtn"
                    Text="Toggle Maximize Button"
                    Clicked="OnToggleMaximizeClicked" />

            <!-- Status display showing current button states -->
            <Label x:Name="StatusLabel"
                   Text="Minimize: Enabled | Maximize: Enabled"
                   FontSize="12"
                   HorizontalOptions="Center" />

            <Border Stroke="#C49B61" StrokeThickness="4" Background="#2B0B98" Padding="16,8" HorizontalOptions="Center">
                <Label Text="This demo works on Mac Catalyst and Windows only" FontAttributes="Bold" TextColor="White" />
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

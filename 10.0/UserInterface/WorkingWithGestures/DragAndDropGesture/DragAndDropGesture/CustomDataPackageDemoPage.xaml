<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DragAndDropGesture.CustomDataPackageDemoPage"
             Title="Custom Data Package Demo"
             BackgroundColor="{StaticResource PageBackgroundColor}">
    <ScrollView>
        <StackLayout Padding="20" Spacing="30">
            
            <!-- Header Section -->
            <Border BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource DarkPrimary}}"
                    StrokeThickness="0"
                    Padding="20,15">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <Label Text="Drag the square with the largest area to the drop zone below"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource White}}"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>
            </Border>

            <!-- Draggable Squares Section -->
            <StackLayout Spacing="20">
                <Label Text="Draggable Squares"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="{StaticResource TextPrimaryColor}"
                       HorizontalOptions="Center"/>
                
                <Grid RowDefinitions="Auto,Auto" 
                      ColumnDefinitions="*,*"
                      RowSpacing="20"
                      ColumnSpacing="20">
                    
                    <!-- Large Square (200x200) -->
                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                            HorizontalOptions="Center"
                            BackgroundColor="{StaticResource CardBackgroundColor}"
                            StrokeThickness="0"
                            Padding="10">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="{StaticResource ShadowBrush}"
                                    Offset="0,4"
                                    Radius="8"
                                    Opacity="0.3"/>
                        </Border.Shadow>
                        <StackLayout Spacing="10">
                            <Rectangle Fill="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource DarkPrimary}}"
                                       Stroke="{AppThemeBinding Light={StaticResource PrimaryDark}, Dark={StaticResource DarkSecondary}}"
                                       StrokeThickness="3"
                                       HeightRequest="200"
                                       WidthRequest="200"
                                       HorizontalOptions="Center">
                                <Rectangle.GestureRecognizers>
                                    <DragGestureRecognizer DragStarting="OnDragStarting" />
                                </Rectangle.GestureRecognizers>
                            </Rectangle>
                            <Label Text="Large Square (200×200)"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource TextSecondaryColor}"
                                   HorizontalOptions="Center"/>
                        </StackLayout>
                    </Border>
                    
                    <!-- Medium Square (150x150) -->
                    <Border Grid.Row="1" Grid.Column="0"
                            HorizontalOptions="Center"
                            BackgroundColor="{StaticResource CardBackgroundColor}"
                            StrokeThickness="0"
                            Padding="10">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="{StaticResource ShadowBrush}"
                                    Offset="0,4"
                                    Radius="8"
                                    Opacity="0.3"/>
                        </Border.Shadow>
                        <StackLayout Spacing="10">
                            <Rectangle Fill="{AppThemeBinding Light={StaticResource Tertiary}, Dark={StaticResource DarkTertiary}}"
                                       Stroke="{AppThemeBinding Light={StaticResource MidnightBlue}, Dark={StaticResource DarkSecondary}}"
                                       StrokeThickness="3"
                                       HeightRequest="150"
                                       WidthRequest="150"
                                       HorizontalOptions="Center">
                                <Rectangle.GestureRecognizers>
                                    <DragGestureRecognizer DragStarting="OnDragStarting" />
                                </Rectangle.GestureRecognizers>
                            </Rectangle>
                            <Label Text="Medium Square (150×150)"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource TextSecondaryColor}"
                                   HorizontalOptions="Center"/>
                        </StackLayout>
                    </Border>
                    
                    <!-- Small Square (100x100) -->
                    <Border Grid.Row="1" Grid.Column="1"
                            HorizontalOptions="Center"
                            BackgroundColor="{StaticResource CardBackgroundColor}"
                            StrokeThickness="0"
                            Padding="10">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="{StaticResource ShadowBrush}"
                                    Offset="0,4"
                                    Radius="8"
                                    Opacity="0.3"/>
                        </Border.Shadow>
                        <StackLayout Spacing="10">
                            <Rectangle Fill="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource DarkSecondary}}"
                                       Stroke="{AppThemeBinding Light={StaticResource Magenta}, Dark={StaticResource Magenta}}"
                                       StrokeThickness="3"
                                       HeightRequest="100"
                                       WidthRequest="100"
                                       HorizontalOptions="Center">
                                <Rectangle.GestureRecognizers>
                                    <DragGestureRecognizer DragStarting="OnDragStarting" />
                                </Rectangle.GestureRecognizers>
                            </Rectangle>
                            <Label Text="Small Square (100×100)"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource TextSecondaryColor}"
                                   HorizontalOptions="Center"/>
                        </StackLayout>
                    </Border>
                </Grid>
            </StackLayout>

            <!-- Drop Zone Section -->
            <StackLayout Spacing="15">
                <Label Text="Drop Zone"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="{StaticResource TextPrimaryColor}"
                       HorizontalOptions="Center"/>
                
                <Border BackgroundColor="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource DarkGray300}}"
                        Stroke="{StaticResource BorderColor}"
                        StrokeThickness="2"
                        StrokeDashArray="5,5"
                        HeightRequest="220"
                        Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <DropGestureRecognizer Drop="OnDrop" />
                    </Border.GestureRecognizers>
                    <StackLayout VerticalOptions="Center" Spacing="10">
                        <Label Text="📦"
                               FontSize="48"
                               HorizontalOptions="Center"
                               TextColor="{StaticResource TextSecondaryColor}"/>
                        <Label Text="Drop the largest square here"
                               FontSize="16"
                               FontAttributes="Italic"
                               TextColor="{StaticResource TextSecondaryColor}"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>
                        <Label Text="(Hint: Look for the square with the largest area)"
                               FontSize="12"
                               TextColor="{StaticResource TextTertiaryColor}"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>
                    </StackLayout>
                </Border>
            </StackLayout>

            <!-- Instructions Section -->
            <Border BackgroundColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource DarkSecondary}}"
                    StrokeThickness="0"
                    Padding="15">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>
                <StackLayout Spacing="8">
                    <Label Text="💡 Instructions"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource PrimaryDarkText}, Dark={StaticResource Black}}"/>
                    <Label Text="1. Each square has a different size and area"
                           FontSize="12"
                           TextColor="{AppThemeBinding Light={StaticResource PrimaryDarkText}, Dark={StaticResource Black}}"/>
                    <Label Text="2. Drag and drop the square with the largest area to win"
                           FontSize="12"
                           TextColor="{AppThemeBinding Light={StaticResource PrimaryDarkText}, Dark={StaticResource Black}}"/>
                    <Label Text="3. The app will calculate the area and give you feedback"
                           FontSize="12"
                           TextColor="{AppThemeBinding Light={StaticResource PrimaryDarkText}, Dark={StaticResource Black}}"/>
                </StackLayout>
            </Border>
        </StackLayout>
    </ScrollView>
</ContentPage>

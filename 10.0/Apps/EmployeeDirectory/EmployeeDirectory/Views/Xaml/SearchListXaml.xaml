<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="EmployeeDirectory.Views.Xaml.SearchListXaml" Title="Search">
	<ContentPage.Content>
		<Grid RowDefinitions="Auto,*" Padding="0">
			<Entry x:Name="SearchEntry" Placeholder="search for" Text="{Binding SearchText}" TextChanged="OnValueChanged" Margin="0,0,0,8" />
			<CollectionView x:Name="collectionView"
						   Grid.Row="1"
						   IsGrouped="True"
						   SelectionMode="Single"
						   SelectionChanged="OnItemSelected"
						   ItemsSource="{Binding Groups}">
				<CollectionView.GroupHeaderTemplate>
					<DataTemplate>
						<Label Text="{Binding Title}" Padding="5,0,0,0" VerticalTextAlignment="Center" />
					</DataTemplate>
				</CollectionView.GroupHeaderTemplate>
				<CollectionView.ItemTemplate>
					<DataTemplate>
						<Grid ColumnDefinitions="44,*,Auto" Padding="0,4">
							<Image Source="{Binding Photo}" WidthRequest="44" HeightRequest="44" />
							<StackLayout Grid.Column="1" Padding="5,0,0,0" VerticalOptions="Center">
								<Label Text="{Binding Name}" />
								<Label Text="{Binding Title}" FontSize="10" />
							</StackLayout>
						</Grid>
					</DataTemplate>
				</CollectionView.ItemTemplate>
			</CollectionView>
		</Grid>
	</ContentPage.Content>
</ContentPage>
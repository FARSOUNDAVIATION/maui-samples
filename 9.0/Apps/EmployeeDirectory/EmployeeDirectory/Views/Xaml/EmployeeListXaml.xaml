<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="EmployeeDirectory.Views.Xaml.EmployeeListXaml" Title="Favorites">
	<ContentPage.Content>
		<ListView x:Name="listView" ItemSelected="OnItemSelected" IsGroupingEnabled="true">
			<ListView.GroupHeaderTemplate>
				<DataTemplate>
					<ViewCell>
						<StackLayout Padding="5,0,0,0" VerticalOptions="Start" Orientation="Vertical">
							<Label Text="{Binding Title}" VerticalTextAlignment="Center" />
						</StackLayout>
					</ViewCell>
				</DataTemplate>
			</ListView.GroupHeaderTemplate>
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<StackLayout HorizontalOptions="Start" Orientation="Horizontal">
							<Image WidthRequest="44" HeightRequest="44" Source="{Binding Photo}" />
							<StackLayout Padding="5,0,0,0" VerticalOptions="Start" Orientation="Vertical">
								<Label Text="{Binding Name}" VerticalTextAlignment="Center" FontSize="Medium" />
								<Label Text="{Binding Title}" VerticalTextAlignment="Center" FontSize="Micro" />
							</StackLayout>
						</StackLayout>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</ContentPage.Content>
</ContentPage>